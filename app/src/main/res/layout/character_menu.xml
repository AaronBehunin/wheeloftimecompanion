<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guideView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp">


            <TextView
                android:id="@+id/Mainchars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Characters"
                android:textSize="26dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />

            <TextView
                android:id="@+id/SupportChars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supporting Characters"
                android:textSize="26dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />

            <TextView
                android:id="@+id/Enemies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enemies"
                android:textSize="26dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            <TextView
                android:id="@+id/LegnedaryChars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legendary Characters"
                android:textSize="26dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            <TextView
                android:id="@+id/OtherChars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Characters"
                android:textSize="26dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>