<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.u0450254.wheeloftimecompanion.Locations.LandmarksActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/Areas">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="4dp"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/treeicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="20dp"
                    android:text="Forests, Plains, and Geographical Areas"

                    android:textSize="30dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:id="@+id/Mountains">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:maxHeight="88dp"
                    android:maxWidth="88dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/falconicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mountains"
                    android:paddingVertical="20dp"
                    android:textSize="30dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:id="@+id/Rivers">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="4dp"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fishicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rivers and Oceans"
                    android:paddingVertical="20dp"
                    android:textSize="30dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:id="@+id/Roads">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:maxHeight="80dp"
                    android:layout_marginRight="4dp"
                    android:maxWidth="80dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/horseicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Roads and Buildings"
                    android:paddingVertical="20dp"
                    android:textSize="30dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
        </LinearLayout></ScrollView>

</LinearLayout>